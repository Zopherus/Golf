<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ejz19.golf">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Players"
            android:label="@string/title_activity_players"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Menu" />
        <activity
            android:name=".ChoosePlayers"
            android:label="@string/title_activity_choose_players"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Courses"></activity>
        <activity android:name=".Game"></activity>
        <activity android:name=".DisplayMessageActivity"></activity>
    </application>

</manifest>